    <div class="nav-panel-menu is-active" data-panel="menu">
        <nav class="nav-menu">
            {{#with @root.page.componentVersion}}
                <h3 class="title">
                    <a class="{{#if (eq ./url @root.page.url)}} is-current-page{{/if}}"
                        href="{{{relativize ./url}}}">Startpage</a>
                </h3>
            {{/with}}
            {{> nav-tree navigation=this}}
        </nav>
    </div>
{{/with}}
